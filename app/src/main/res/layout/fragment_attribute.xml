<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttributeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="75dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonLoadImage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Load Image" />

                <Button
                    android:id="@+id/buttonOpenCamera"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Open Camera" />

                <Button
                    android:id="@+id/buttonGetAttribute"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Get Attribute" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:paddingVertical="10dp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graphViewRed"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="gone" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graphViewGreen"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="gone" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graphViewBlue"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="gone" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graphViewGrayscale"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>